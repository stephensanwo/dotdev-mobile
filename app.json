{
  "expo": {
    "name": "Dot Dev Blog",
    "description":"Technical articles and opinions by Stephen Sanwo", 
    "slug": "dotdevMobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/dotDevAppIcon.png",
    "scheme": "dotdev",
    "userInterfaceStyle": "automatic",
    "backgroundColor": "#000000",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    }
  }
}
